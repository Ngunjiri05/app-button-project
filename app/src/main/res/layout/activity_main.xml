<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mSimpleCalc"
        android:layout_width="178dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="161dp"
        android:text="SimpleCalculator"
        app:layout_constraintBottom_toTopOf="@+id/mContactList"
        app:layout_constraintEnd_toStartOf="@+id/mWeb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mWeb"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="155dp"
        android:text="Website"
        app:layout_constraintBottom_toTopOf="@+id/mContactList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mSimpleCalc"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mContactList"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_marginBottom="240dp"
        android:text="Contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mWeb" />

</android.support.constraint.ConstraintLayout>